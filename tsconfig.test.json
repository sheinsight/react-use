{
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "paths": {
      "@/test": ["./testing"]
    }
  },
  "include": ["./testing/**/*", "./src/**/*", "./src/**/*.test.ts", "./src/**/*.test.tsx"],
  "exclude": ["./src/**/demo.tsx"]
}
