{
  "name": "@shined/use",
  "type": "module",
  "version": "0.0.0-alpha.0",
  "packageManager": "pnpm@8.15.8",
  "description": "A simple yet powerful collection of React Hooks.",
  "author": "Viki <hi@viki.moe> (https://github.com/vikiboss)",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": {
        "require": "./dist/index.d.cts",
        "import": "./dist/index.d.ts",
        "default": "./dist/index.d.ts"
      },
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "keywords": [
    "react",
    "react-hooks",
    "shined"
  ],
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "biome check && oxlint && tsc --noEmit",
    "lint:fix": "biome check --fix --unsafe && oxlint --fix",
    "test": "vitest run",
    "test:dev": "vitest",
    "docs:dev": "pnpm run docs:update-hooks-data && pnpm -C website run dev",
    "docs:build": "pnpm run docs:update-hooks-data && pnpm -C website run build",
    "docs:update-hooks-data": "esno ./scripts/update-hooks-data.ts"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "@shined/reactive": {
      "optional": true
    },
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    },
    "@types/web-bluetooth": {
      "optional": true
    }
  },
  "peerDependencies": {
    "@shined/reactive": "^0.1.2",
    "@types/react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "@types/react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "@types/web-bluetooth": "*",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.1",
    "@shined/reactive": "^0.1.3",
    "@swc/core": "^1.5.25",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/web-bluetooth": "^0.0.20",
    "braces": ">=3.0.3",
    "esno": "^4.7.0",
    "jsdom": "^24.1.0",
    "oxlint": "^0.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5",
    "unocss": "^0.59.4",
    "vitest": "^1.6.0"
  }
}
