{
  "compilerOptions": {
    "composite": true,
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@@/*": ["./*"],
      "@shined/react-use": ["../src"],
      "@/*": ["./src/*"],
      "i18n": ["./i18n.json"]
    }
  },
  "include": ["./src/**/*", "./docs/**/*"],
  "mdx": {
    "checkMdx": true
  }
}
