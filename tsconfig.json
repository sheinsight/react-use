{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "paths": {
      "@/test": ["./testing"],
      "@shined/react-use": ["./src"],
      "@/components": ["./website/src/components"],
      "@formkit/auto-animate/react": ["./website/node_modules/@formkit/auto-animate/react"],
      "react-hot-toast": ["./website/node_modules/react-hot-toast"]
    }
  },
  "include": ["./src"],
  "exclude": ["./website", "./src/**/demo.tsx"]
}
