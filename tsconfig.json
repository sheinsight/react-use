{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "paths": {
      "@/test": ["./testing"]
    }
  },
  "include": ["./src/**/*", "./testing/**/*"],
  "exclude": ["./src/**/demo.tsx"],
  "references": [{ "path": "./docs/tsconfig.json" }]
}
